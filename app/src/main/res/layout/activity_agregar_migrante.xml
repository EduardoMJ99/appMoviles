<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".AgregarMigrante">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgFotografia"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:strokeColor="@color/orange"
        app:strokeWidth="1dp"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
        app:srcCompat="@drawable/user"/>

    <Button
        android:id="@+id/btnTomarFoto"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickButtons"
        android:text="tomar foto" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:background="@drawable/rounded_corners_card"
            android:backgroundTint="@color/background2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:layout_weight="1"
            android:src="@drawable/name_migrante" />

        <EditText
            android:id="@+id/txtNombreAgregarMigrante"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            style="@style/EditTexts"
            android:inputType="textPersonName"
            android:hint="Nombre completo"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:background="@drawable/rounded_corners_card"
            android:backgroundTint="@color/background2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:layout_weight="1"
            android:src="@drawable/phone_migrante" />

        <EditText
            android:id="@+id/txtTelefonoAgregarMigrante"
            style="@style/EditTexts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:hint="Numero telefonico"
            android:inputType="number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:background="@drawable/rounded_corners_card"
            android:backgroundTint="@color/background2"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/date_migrante" />

        <EditText
            android:id="@+id/txtFechaNacAgregarMigrante"
            style="@style/EditTexts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Fecha nacimiento"
            android:inputType="date"
            android:focusable="false"/>

        <ImageView
            android:background="@drawable/rounded_corners_card"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/background2"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/flag_migrante" />

        <Spinner
            android:id="@+id/spiNacionalidad"
            style="@style/EditTexts"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="Fecha nacimiento"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:background="@drawable/rounded_corners_card"
            android:backgroundTint="@color/background2"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/date_migrante" />

        <EditText
            android:id="@+id/txtFechaLlegaAgregarMigrante"
            style="@style/EditTexts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Fecha llegada"
            android:focusable="false"
            android:inputType="date"/>

        <ImageView
            android:background="@drawable/rounded_corners_card"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/background2"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/clock_migrante" />

        <EditText
            android:id="@+id/txtHoraLlegadaAgregarMigrante"
            style="@style/EditTexts"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="Hora"
            android:focusable="false"
            android:inputType="time"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:background="@drawable/rounded_corners_card"
            android:backgroundTint="@color/background2"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/date_migrante" />

        <EditText
            android:id="@+id/txtFechaConsulAgregarMigrante"
            style="@style/EditTexts"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Fecha consulado"
            android:focusable="false"
            android:inputType="date"/>

        <ImageView
            android:background="@drawable/rounded_corners_card"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/background2"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/clock_migrante" />

        <EditText
            android:id="@+id/txtHoraConsulAgregarMigrante"
            style="@style/EditTexts"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="Hora"
            android:focusable="false"
            android:inputType="time"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancelar"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="onClickButtons"
            android:text="Cancelar" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="onClickButtons"
            android:text="guardar y salir" />
    </LinearLayout>
</LinearLayout>